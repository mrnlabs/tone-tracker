# Activation Monitor - Environment Configuration
# Copy this file to .env and update with your actual values

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Application Port
PORT=5173

# Debug Mode (enables verbose logging)
VITE_DEBUG=false

# Application Name
VITE_APP_NAME="Activation Monitor"

# Application Version
VITE_APP_VERSION="1.0.0"

# ===================================
# API CONFIGURATION
# ===================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:8080/api

# API Request Timeout (milliseconds)
VITE_APP_TIMEOUT=30000

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# ===================================
# AUTHENTICATION & SECURITY
# ===================================

# JWT Secret (for local token validation - optional)
VITE_JWT_SECRET=your-jwt-secret-here

# Session Timeout (milliseconds)
VITE_SESSION_TIMEOUT=86400000

# Token Refresh Interval (milliseconds)
VITE_TOKEN_REFRESH_INTERVAL=3300000

# Content Security Policy Mode (report-only, enforce)
VITE_CSP_MODE=report-only

# Allowed Origins (comma-separated)
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# ===================================
# AWS S3 CONFIGURATION
# ===================================

# S3 Bucket URL for file storage
VITE_AWS_S3_BUCKET=https://your-bucket.s3.amazonaws.com

# S3 Region
VITE_AWS_REGION=us-east-1

# S3 Access (for client-side uploads - use with caution)
# Note: Prefer server-side uploads for security
VITE_AWS_ACCESS_KEY_ID=
VITE_AWS_SECRET_ACCESS_KEY=

# ===================================
# GOOGLE MAPS CONFIGURATION
# ===================================

# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Default Map Center Coordinates
VITE_MAP_DEFAULT_LAT=-26.2041
VITE_MAP_DEFAULT_LNG=28.0473

# Default Map Zoom Level
VITE_MAP_DEFAULT_ZOOM=12

# ===================================
# FIREBASE CONFIGURATION
# ===================================

# Firebase Project Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Cloud Messaging (for push notifications)
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# ===================================
# FEATURE FLAGS
# ===================================

# Enable/Disable Features
VITE_FEATURE_PWA=true
VITE_FEATURE_OFFLINE_MODE=false
VITE_FEATURE_REALTIME_UPDATES=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_EXPORT_EXCEL=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_GEOLOCATION=true

# ===================================
# MONITORING & ANALYTICS
# ===================================

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_TRACKING_ID=

# LogRocket Project ID
VITE_LOGROCKET_ID=

# ===================================
# DEVELOPMENT TOOLS
# ===================================

# Enable Vue DevTools in Production
VITE_VUE_DEVTOOLS=false

# Source Maps in Production
VITE_SOURCE_MAPS=false

# Mock API Mode (for development without backend)
VITE_USE_MOCK_API=false

# ===================================
# PERFORMANCE OPTIMIZATION
# ===================================

# Enable Service Worker
VITE_ENABLE_SERVICE_WORKER=true

# Cache TTL (milliseconds)
VITE_CACHE_TTL=3600000

# Image Optimization Quality (1-100)
VITE_IMAGE_QUALITY=85

# Lazy Load Images
VITE_LAZY_LOAD_IMAGES=true

# ===================================
# LOCALIZATION
# ===================================

# Default Language
VITE_DEFAULT_LOCALE=en

# Supported Languages (comma-separated)
VITE_SUPPORTED_LOCALES=en,es,fr

# Date Format
VITE_DATE_FORMAT=YYYY-MM-DD

# Time Format (12 or 24)
VITE_TIME_FORMAT=24

# Currency
VITE_CURRENCY=USD

# ===================================
# EMAIL CONFIGURATION
# ===================================

# Support Email
VITE_SUPPORT_EMAIL=support@activationmonitor.com

# Admin Email
VITE_ADMIN_EMAIL=admin@activationmonitor.com

# No-Reply Email
VITE_NOREPLY_EMAIL=noreply@activationmonitor.com

# ===================================
# SOCIAL MEDIA
# ===================================

# Social Media Links
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_LINKEDIN_URL=
VITE_INSTAGRAM_URL=

# ===================================
# LEGAL & COMPLIANCE
# ===================================

# Terms of Service URL
VITE_TERMS_URL=/terms

# Privacy Policy URL
VITE_PRIVACY_URL=/privacy

# Cookie Policy URL
VITE_COOKIE_URL=/cookies

# GDPR Compliance
VITE_GDPR_ENABLED=true

# ===================================
# CUSTOM CONFIGURATION
# ===================================

# Add your custom environment variables below