# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_APP_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=Activation Tracker
VITE_APP_VERSION=1.0.0
VITE_COMPANY_NAME=Your Company Name

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_API=false

# External Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Note: For Advanced Markers to work, ensure your Google Maps API key has Map IDs enabled
# You can use any valid Map ID or create one in the Google Cloud Console

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png,.gif,.xlsx,.xls,.csv

# Session Configuration
VITE_SESSION_TIMEOUT=86400000
VITE_REFRESH_TOKEN_THRESHOLD=300000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en